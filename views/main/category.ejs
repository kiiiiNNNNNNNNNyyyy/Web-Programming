<% layout('layout') -%>

<div class="container">
	
	<div class="row">
		<% for(var i=0; i<products.length; i++) { %>
		<div class="col-md-4">
			<a href="/product/<%= products[i]._id %>">
				<div class="thumbnail">
					<img src="<%= products[i].image %>">
					<div class="caption">
						<p><%= products[i].price %></p>
						<p><%= products[i].category.name %></p>
						<p><%= products[i].name %></p>
					</div>
				</div>
			</a>
		</div>
		<% } %>
	</div>

</div>